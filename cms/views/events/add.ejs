<h2>New Event Article</h2>
<form action="/events" method="POST">
	<div class="form-group">
		<label for="start_date">Start Date</label>
		<input type="date" id="start_date" name="start" class="form-control">

		<label for="start_hour">Start Time</label>
		<div class="input-group">
			<input type="number" id="start_hour" name="start_hour" class="form-control">
			<span class="input-group-addon">h</i></span>
		</div>
		<div class="input-group">
			<input type="number" id="start_min" name="start_min" class="form-control">
			<span class="input-group-addon">min</i></span>
		</div>
	</div>
	<div class="form-group">
		<label for="body_en">English Description</label>
		<input type="text" id="body_en" name="body_en" class="form-control">
	</div>
	<div class="form-group">
		<label for="body_es">Spanish Description</label>
		<input type="text" id="body_es" name="body_es" class="form-control">
	</div>
	<div class="form-group">
		<label for="body_pt">Portuguese Description</label>
		<input type="text" id="body_pt" name="body_pt" class="form-control">
	</div>
	<div class="form-group">
		<input type="submit" class="btn btn-primary" value="Submit">
	</div>
</form>

<p><a href="/events">Back to list</a></p>