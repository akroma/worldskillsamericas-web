<h2>Existing Events</h2>
<p>
	<a class="btn btn-primary" href="/events/add">New event</a>
</p>
<table class="table table-striped table-bordered table-hover" id="events">
	<thead>
		<tr>
			<th>Start Time</th>
			<th>EN</th>
			<th>ES</th>
			<th>PT</th>
		</tr>
	</thead>
	<tbody>
		<% events.forEach(function(n) { %>
		<tr>
			<td><%= n.date('start') %></td>
			<td class='well' lang='en'>
				<%- n.body_en %>
			</td>
			<td class='well' lang='es'>
				<%- n.body_es %>
			</td>
			<td class='well' lang='pt'>
				<%- n.body_pt %>
			</td>
		</tr>
		<% }); %>
	</tbody>
</table class="table table-striped">